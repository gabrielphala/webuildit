{{~ fetch '/cart/get/all' | as 'cart'}}

<div class="navbar">
    <ul class="flex">
        <a href="/plans" class="flex flex--a-center" {{click "Util.nav(event)" }}>
            <svg class="image--icon">
                <use href="#notebook"></use>
            </svg>
            <span>Plans</span>
        </a>
        <a href="/profile" class="flex flex--a-center" {{click "Util.nav(event)"}}>
            <svg class="image--icon">
                <use href="#user"></use>
            </svg>
            <span>Profile</span>
        </a>
        <a href="/cart" class="flex flex--a-center" {{click "Util.nav(event)" }}>
            <svg class="image--icon">
                <use href="#cart"></use>
            </svg>
            <span>
                Cart
                <sup style="color: darkred;">{{arraylen cart.products}}</sup>
            </span>
        </a>
        <a href="/search" class="flex flex--a-center" {{click "Util.nav(event)" }}>
            <svg class="image--icon">
                <use href="#search"></use>
            </svg>
            <span>Search for materials</span>
        </a>
    </ul>
</div>